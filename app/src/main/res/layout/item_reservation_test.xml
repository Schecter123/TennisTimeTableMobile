<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/item_group_content_padding">

            <TextView
                android:id="@+id/tv_task_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/reservation_item_title_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                android:text="@string/reservation" />

            <ImageButton
                android:id="@+id/ib_edit_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/image_contentDescription"
                android:padding="@dimen/reservation_item_image_buttons_padding"
                android:src="@drawable/ic_edit"
                android:tooltipText="Edytuj rezerwację"/>

            <ImageButton
                android:id="@+id/ib_delete_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/image_contentDescription"
                android:padding="@dimen/reservation_item_image_buttons_padding"
                android:src="@drawable/ic_delete"
                android:tooltipText="Anuluj rezerwację"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_court"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="@dimen/reservation_item_title_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                android:text="Kort:" />

            <TextView
                android:id="@+id/tv_court_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                tools:text="Numer kortu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/reservation_item_title_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                android:text="Data:" />

            <TextView
                android:id="@+id/tv_date_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                tools:text="Data rezerwacji" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/tv_hour_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/reservation_item_title_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                android:text="Rozpoczęcie:" />

            <TextView
                android:id="@+id/tv_hour_start_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                tools:text="" />

            <TextView
                android:id="@+id/tv_hour_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/reservation_item_title_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                android:text="Zakończenie:" />

            <TextView
                android:id="@+id/tv_hour_end_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/reservation_item_title_text_size"
                tools:text="" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>